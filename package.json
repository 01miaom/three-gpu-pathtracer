{
  "name": "three-gpu-pathtracing",
  "description": "Set of experiments and examples using three-mesh-bvh to accelerate path tracing on the GPU.",
  "dependencies": {
    "three": "^0.134.0",
    "three-mesh-bvh": "^0.5.3",
    "xatlas-web": "^0.1.0"
  },
  "devDependencies": {
    "eslint-config-mdcs": "^5.0.0",
    "concurrently": "^6.3.0",
    "parcel": "^2.1.1",
    "eslint": "^7.32.0"
  },
  "scripts": {
    "start": "concurrently \"cd example && parcel serve ./*.html --dist-dir ./dev-bundle/ --no-cache --no-hmr\"",
    "build-examples": "cd example && parcel build ./*.html --dist-dir ./bundle/ --public-url . --no-cache --no-content-hash"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gkjohnson/three-shader-pathtracing.git"
  },
  "bugs": {
    "url": "https://github.com/gkjohnson/three-shader-pathtracing/issues"
  },
  "homepage": "https://github.com/gkjohnson/three-shader-pathtracing#readme"
}
