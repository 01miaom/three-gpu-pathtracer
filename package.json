  "dependencies": {
    "three": "^0.134.0",
    "three-mesh-bvh": "^0.5.2",
    "xatlas-web": "^0.1.0"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "parcel": "^2.0.1"
  },
  "scripts": {
    "start": "concurrently \"cd example && parcel watch ./*.html --dist-dir ./dev-bundle/ --public-url . --no-cache --no-hmr\" \"static-server\""
  },
